<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Firebasecrud" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorPrimary">@color/light_blue_600</item>
        <item name="colorPrimary">@color/light_blue_600</item>
        <item name="colorPrimaryDark">@color/light_blue_900</item>
        <item name="colorAccent">@color/light_blue_A200</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="ThemeOverlay.Wordpresapp.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
    <style name="smallBtnStyle" parent="Widget.AppCompat.TextView">
        <item name="color">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="regularBtnStyle" parent="Widget.AppCompat.TextView">
        <item name="color">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="largeBtnStyle" parent="Widget.AppCompat.TextView">
        <item name="color">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Theme.Firebasecrud" parent="Base.Theme.Firebasecrud" />
</resources>